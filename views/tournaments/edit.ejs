<body>  
        <div class="container-right">
                <div class="card-header">
                        
                    <h2 class="card-title mb-0">Edit Your ParTee</h2>

                <div class="card-body">
                    <form action="/tour/<%=tournament._id%>/edit?_method=PUT" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-12">

                                <input type="text" class="form-control" id="inputFirstName" name="eventName" placeholder="Event Name">
                            </div>
                            <div class="form-group col-md-12">

                                <input type="text" class="form-control" id="inputLastName" name="location" placeholder="Location">
                            </div>
                        </div>
                        <div class="form-row">
                                <div class="form-group col-md-12">
                                    <input type="date" class="form-control" id="inputemail" name="dateOfEvent" placeholder="Date">
                                </div>
                            </div>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                    <br/>
                    <form action="/tour/<%=tournament._id%>/notify" method="post">
                            <div class="form-group col-md-12">
                                <input type="text" class="form-control" id="inputFirstName" name="notifications" placeholder="Notifications">
                                <br/>
                                <button type="submit" class="btn btn-primary">Notify</button>
                            </div>
                    </form>
                    <form action="/tour/<%=tournament._id%>/edit?_method=DELETE" method="post">
                        <input class="btn btn-danger" type="submit" value="Delete"/>
                    </form>

                </div>
            </div>
        </div> 
 
                

        
</body>
