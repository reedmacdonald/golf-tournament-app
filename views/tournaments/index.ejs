      <ul>
        <% for(let i = 0; i < tournaments.length; i++){ %>
            <div class="card text-center">
                <div class="card-header">
                 <a href="/tour/cat/<%=tournaments[i].category%>"><%=tournaments[i].category%></a>
                </div>
            <div class="card-body">
                <a href= "/tour/<%=tournaments[i]._id%>"> <h5 class="card-title"><%=tournaments[i].eventName%></h5></a>
                <p class="card-text"><%=tournaments[i].description%></p>
         <% if(tournaments[i].fieldSize > tournaments[i].players.length){ %>
            <form action="/tour/<%=tournaments[i]._id%>?_method=PUT" method="post">
                <input class="btn btn-success" type="submit" value="Sign Up"/>
            </form> 
            <% } else { %>
            <form>
                <input class="btn btn-danger" type="submit" value="Full"/>
